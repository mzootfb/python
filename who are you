#Confirm selections
confirm = raw_input("Am I correct?")
word = confirm

def confirm(word):
    while True:
        if word.lower() == "yes":
            return True, "Lets continue"
            break
        elif word.lower() == "no":
            return False, "lets try again"
        else:
            return False, "Sorry, I didnt understand you."




